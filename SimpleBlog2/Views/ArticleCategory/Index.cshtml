@model IEnumerable<SimpleBlog2.Models.ArticleCategoryModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Kategorie artukułów</h2>

<p>
    <a asp-action="Create">Dodaj nową kategorię</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleCategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id=item.ArticleCategoryId }) |
                @Html.ActionLink("Szczegóły", "Details", new { id=item.ArticleCategoryId}) |
                @Html.ActionLink("Usuń", "Delete", new { id=item.ArticleCategoryId })
            </td>
        </tr>
}
    </tbody>
</table>
