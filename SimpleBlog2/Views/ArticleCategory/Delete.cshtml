@model SimpleBlog2.Models.ArticleCategoryModel

@{
    ViewData["Title"] = "Usuwanie kategorii";
    Layout = "_LayoutManage";
}

<h2>Usuwanie kategorii artykułów</h2>

<h3>Czy na pewno chcesz usunąć tą kategorię artykułów?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </form>
</div>
