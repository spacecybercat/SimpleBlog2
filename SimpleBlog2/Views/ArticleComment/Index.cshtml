@model IEnumerable<SimpleBlog2.Models.ArticleCommentModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Komentarze do artykułów</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfPublish)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfPublish)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id=item.ArticleCommentId }) |
                @Html.ActionLink("Szczegóły", "Details", new { id=item.ArticleCommentId  }) |
                @Html.ActionLink("Usuń", "Delete", new { id=item.ArticleCommentId })
            </td>
        </tr>
}
    </tbody>
</table>
